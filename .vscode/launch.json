{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "MatchBox API Debug with Docker Compose",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "preLaunchTask": "docker-run: debug",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/code"
                }
            ]
        },
        {
            "name": "Matchbox: Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov",
                "PYTHONPATH": "${workspaceFolder}",
            },
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Matchbox: Profile",
            "type": "debugpy",
            "request": "launch",
            "module": "cProfile",
            "args": [
                "-o",
                "/tmp/tmp.prof",
                "${file}"
            ]
        },
        {
            "name": "API debug",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "matchbox.server.api:app",
                "--reload",
                "--port",
                "8080"
            ]
        },
    ]
}
